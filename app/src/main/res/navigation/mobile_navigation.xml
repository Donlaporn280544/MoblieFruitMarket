<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.fruitshop.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_shopping"
        android:name="com.example.fruitshop.ui.shopping.ShoppingFragment"
        android:label="shopping"
        tools:layout="@layout/fragment_shopping" />

    <fragment
        android:id="@+id/navigation_credit"
        android:name="com.example.fruitshop.ui.credit.CreditFragment"
        android:label="credit"
        tools:layout="@layout/fragment_credit" />

    <fragment
        android:id="@+id/navigation_account"
        android:name="com.example.fruitshop.ui.account.AccountFragment"
        android:label="account"
        tools:layout="@layout/fragment_account" />


</navigation>